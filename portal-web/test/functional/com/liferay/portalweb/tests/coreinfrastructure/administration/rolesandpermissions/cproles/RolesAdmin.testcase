		Role.removeAssignee(
			assigneeName = "Role Assignee Test",
			assigneeType = "Segments",
			roleTitle = "Remove Regrole Assignee");
	}

	@priority = "5"
	test SiteRoleCanBeDeleted {
		property portal.acceptance = "true";

