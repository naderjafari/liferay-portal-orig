@component-name = "portal-collaboration"
definition {

	property custom.properties = "default.layout.template.id=1_column${line.separator}jsonws.web.service.paths.excludes=";
	property portal.release = "true";
	property portal.upstream = "true";
	property testray.component.names = "Mentions";
	property testray.main.component.name = "Mentions";

	setUp {
		TestCase.setUpPortalInstance();

		User.firstLoginPG();

		JSONUser.addUser(
			userEmailAddress = "userea@liferay.com",
			userFirstName = "userfn",
			userLastName = "userln",
			userScreenName = "usersn");

		JSONUser.setFirstPassword(
			agreeToTermsAndAnswerReminderQuery = "true",
			requireReset = "false",
			userEmailAddress = "userea@liferay.com");

		User.logoutPG();

		User.loginPG(
			password = "test",
			userEmailAddress = "userea@liferay.com");

		User.logoutPG();

		User.loginPG();
	}

	tearDown {
		var testPortalInstance = PropsUtil.get("test.portal.instance");

		if ("${testPortalInstance}" == "true") {
			PortalInstances.tearDownCP();
		}
		else {
			BlogsEntry.tearDownCP();

			JSONUser.tearDownNonAdminUsers();

			Page.tearDownCP();
		}
	}

	@priority = "5"
	@refactorneeded
	test ViewMentionViaBlogsEntry {
		ProductMenu.gotoPortlet(
			category = "Site Builder",
			portlet = "Pages");

		SitePages.addPublicPage(
			pageName = "Blogs Page",
			sitePageType = "Widget Page");

		Navigator.gotoPage(pageName = "Blogs Page");

		Portlet.addPG(portletName = "Blogs");

		Navigator.gotoPage(pageName = "Blogs Page");

		Mentions.addMentionViaBlogsEntry(
			entryContent = "Blogs Entry Content",
			entryTitle = "Blogs Entry Title",
			mentionsUserScreenName = "usersn");

		Navigator.gotoPage(pageName = "Blogs Page");

		BlogsNavigator.gotoPG(entryTitle = "Blogs Entry Title");

		Mentions.viewMentionTagLink(
			mentionsUserFullName = "userfn userln",
			mentionsUserScreenName = "usersn");
	}

	@priority = "5"
	@refactorneeded
	test ViewMentionViaBlogsEntryComment {
		ProductMenu.gotoPortlet(
			category = "Site Builder",
			portlet = "Pages");

		SitePages.addPublicPage(
			pageName = "Blogs Page",
			sitePageType = "Widget Page");

		Navigator.gotoPage(pageName = "Blogs Page");

		Portlet.addPG(portletName = "Blogs");

		JSONBlog.addEntry(
			entryContent = "Blogs Entry Content",
			entryTitle = "Blogs Entry Title");

		Navigator.gotoPage(pageName = "Blogs Page");

		BlogsNavigator.gotoEntryPG(
			entryContent = "Blogs Entry Content",
			entryTitle = "Blogs Entry Title");

		Pause(locator1 = "3000");

		Mentions.addMentionViaComments(
			entryComment = "Comment mentioning",
			mentionsUserFullName = "userfn userln",
			mentionsUserScreenName = "usersn");

		Mentions.viewCommentMentionTagLink(
			mentionsUserFullName = "userfn userln",
			mentionsUserScreenName = "usersn");
	}

	@description = "This ensures that a guest is able to mention others in the comment section."
	@priority = "3"
	@refactorneeded
	test ViewMentionViaBlogsEntryCommentAsGuest {
		property osgi.module.configuration.file.names = "com.liferay.portal.bundle.blacklist.internal.configuration.BundleBlacklistConfiguration.config";
		property osgi.module.configurations = "blacklistBundleSymbolicNames=&quot;com.liferay.saml.addon.keep.alive.web,com.liferay.saml.api,com.liferay.saml.impl,com.liferay.saml.opensaml.integration,com.liferay.saml.persistence.api,com.liferay.saml.persistence.service,com.liferay.saml.web,saml-hook&quot;";

		JSONLayout.addPublicLayout(
			groupName = "Guest",
			layoutName = "Blogs Page");

		JSONLayout.addWidgetToPublicLayout(
			column = "1",
			groupName = "Guest",
			layoutName = "Blogs Page",
			widgetName = "Blogs");

		JSONBlog.addEntry(
			entryContent = "Blogs Entry Content",
			entryTitle = "Blogs Entry Title");

		User.logoutPG();

		Navigator.gotoPage(pageName = "Blogs Page");

		BlogsNavigator.gotoEntryPG(
			entryContent = "Blogs Entry Content",
			entryTitle = "Blogs Entry Title");

		Pause(locator1 = "3000");

		Mentions.addMentionViaComments(
			entryComment = "Comment mentioning",
			guest = "true",
			mentionsUserFullName = "userfn userln",
			mentionsUserScreenName = "usersn",
			userEmailAddress = "guest@liferay.com",
			userFirstName = "Guestfn",
			userLastName = "Guestln");

		AssertElementPresent(
			key_mentionsUserScreenName = "usersn",
			locator1 = "Mentions#MENTIONS_COMMENT_TAG_LINK");
	}

	@description = "This ensures that a user is able to mention others in comment section when editing."
	@priority = "4"
	@refactorneeded
	test ViewMentionViaEditedBlogsEntryComment {
		JSONLayout.addPublicLayout(
			groupName = "Guest",
			layoutName = "Blogs Page");

		JSONLayout.addWidgetToPublicLayout(
			column = "1",
			groupName = "Guest",
			layoutName = "Blogs Page",
			widgetName = "Blogs");

		JSONBlog.addEntry(
			entryContent = "Blogs Entry Content",
			entryTitle = "Blogs Entry Title");

		Navigator.gotoPage(pageName = "Blogs Page");

		BlogsNavigator.gotoEntryPG(
			entryContent = "Blogs Entry Content",
			entryTitle = "Blogs Entry Title");

		Comments.addPG(entryComment = "Blog Comment");

		Navigator.gotoPage(pageName = "Blogs Page");

		BlogsNavigator.gotoEntryPG(
			entryContent = "Blogs Entry Content",
			entryTitle = "Blogs Entry Title");

		Comments.edit(
			addMention = "true",
			entryComment = "Blog Comment",
			entryCommentEdit = "Blogs Comment mentioning",
			mentionsUserScreenName = "usersn");

		Mentions.viewCommentMentionTagLink(
			mentionsUserFullName = "userfn userln",
			mentionsUserScreenName = "usersn");
	}

}